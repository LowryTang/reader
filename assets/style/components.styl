.search-wrapper
  height 50px
  vertical-align top
  float right

/*
  Book List and Book Item
 */
.book-item
  padding 10px
  border 1px solid #D8D8D8
  border-radius 3px
  background #FFF
  height 100%
  .cover
    cursor pointer
    float left
    border 1px solid #DDD
    box-shadow rgba(0, 0, 0, 0.15) 0 1px 3px
    &:hover
      border-color #999
  .book-desc
    position relative
    height 100%
    margin-left 130px
    padding 0 5px
    color #545454
    font-size 14px
    color #999
    .title
      cursor pointer
      color #000
      font-size 17px
      font-weight bold
      line-height 30px
      text-overflow ellipsis
      white-space nowrap
      overflow hidden
      margin-right 20px
      &:hover
        text-decoration underline
    .type
      margin-bottom 3px
      span
        color #666
        &:first-child
          margin-right 20px
    .short-intro
      font-size 14px
      margin-bottom 6px
      max-height 80px
      word-wrap break-word
      overflow hidden
    .last-chapter
      position absolute
      bottom 0
      font-size 12px
      span
        color #666

/*
  BookOverview Component
 */
.book-overview
  .book-dialog
    padding 0 50px
    overflow auto
  .book-content
    max-width 660px
    margin 0 auto
    .book-header
      h2
        margin-bottom 5px
      padding 10px 0
      margin-bottom 10px
      span
        padding 0 5px
    .book-detail
      margin-bottom 15px
    .book-chapter
      ul
        list-style none
        li
          width 50%
          cursor pointer
          padding-bottom 2px
          text-overflow ellipsis
          white-space nowrap
          display inline-block
          overflow hidden

.list-container
  .list-header
    font-size 18px
    font-weight bold
    margin-bottom 10px

@media screen and (max-width: 768px)
  .book-chapter
    li
      width 100%
